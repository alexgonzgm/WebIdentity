@using WebIdentity.Models
@model IEnumerable<Club>

@{
    ViewData["Title"] = "AllClubes";
}
<p><a asp-action="AddClub" class="btn btn-primary">Add a club</a></p>
@{
    if (Model.Count() < 1)
    {
        <p>No clubes in database yet</p>
    }
    else
    {
        <h3>All Clubes</h3>
        <table border="1" class="table table-striped table-bordered ">
            <tr>
                <th>Club ID</th>
                <th>Club Name</th>
                <th>Number of Students</th>
                <th>Department</th>
            </tr>
            @foreach (var club in Model)
            {
                <tr>
                    <td>@club.ClubId</td>
                    <td>
                        <a 
                           asp-controller="Club"
                           asp-action="RegisterClub"
                           asp-route-id="@club.ClubId">@club.ClubName</a>
                    </td>
                    <td>
                        <a 
                           asp-controller="Club"
                           asp-action="AllRegistrationClub"
                           asp-route-id="@club.ClubId">@club.NumberOfStudents</a>
                    </td>
                    <td>
                        <a asp-area="DepartmentAdmin"
                           asp-controller="Club"
                           asp-action="DepartmentDetails"
                           asp-route-id="@club.Department.DepartmentId">
                            @club.Department.DepartmentName
                        </a>
                    </td>
                </tr>
            }
        </table>
    }
}





