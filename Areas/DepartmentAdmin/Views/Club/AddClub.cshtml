@using WebIdentity.ViewModels
@model ClubAddClubViewModel

    <form asp-controller="Club" asp-action="AddClub" method="post">
        <div class="card  col-md-8 p-4 mb-2">
            <div class="form-group row">
                <label asp-for="Club.ClubName" class="col-3"></label>
                <input asp-for="Club.ClubName" class="col-7 form-control" />
            </div>
            <div class="form-group row">
                <label asp-for="Club.NumberOfStudents" class="col-3"></label>
                <input asp-for="Club.NumberOfStudents" class="col-7 form-control"/>
            </div>
            <div class="form-group row">
                <label asp-for="Department.DepartmentName" class="col-3"></label>
                <select asp-for="Department.DepartmentId" asp-items="@Model.DepartmentList" class="col-7 form-control"></select>
            </div>
        </div>
           


            <button type="submit" class="btn btn-success">Add Course</button>
    </form>



