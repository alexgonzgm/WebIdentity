@using WebIdentity.Models
@model IEnumerable<Department>

@{
    ViewData["Title"] = "AllDepartment";
}
<p><a asp-action="AddDepartment" class="btn btn-primary">Add an department</a></p>
@{
    if (Model.Count() < 1)
    {
        <p>No department in database yet</p>
    }
    else
    {
        <h3>All Department</h3>
        <table border="1" class="table table-striped table-bordered ">
            <tr>
                <th>Department ID</th>
                <th>Department Name</th>
            </tr>
            @foreach (var department in Model)
            {
        <tr>
                <td>@department.DepartmentId</td>
                <td>
                    <a asp-area="DepartmentAdmin"
                       asp-controller="Club"
                       asp-action="DepartmentDetails"
                       asp-route-id="@department.DepartmentId">
                        @department.DepartmentName
                    </a>
                </td>
               
        </tr>
            }
        </table>
    }
}



