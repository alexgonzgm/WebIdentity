@using WebIdentity.Models
@model Department
<form asp-controller="Department" asp-action="AddDepartment" method="post">
    <div class="card  col-md-8 p-4 mb-2">
        <div class="form-group row">
            <label asp-for="DepartmentName" class="col-3"></label>
            <input asp-for="DepartmentName" class="form-control col-7" />
        </div>
        <div class="form-group row">
            <label asp-for="PhoneNumber" class="col-3"></label>
            <input asp-for="PhoneNumber" class="form-control col-7" />
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-3"></label>
            <input asp-for="Email" class="form-control col-7" />
        </div>

        <div class="form-group row">
            <label asp-for="Office" class="col-3"></label>
            <input asp-for="Office" class="form-control col-7" />
        </div>

       
    </div>
    <button type="submit" class="btn btn-success">Add Department</button>
</form>

